@model IEnumerable<TallerMotos.Models.ViewData.MotosClientes>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 style="color:white">Listado Motos Clientes</h1>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreCliente)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreCliente)
                </td>

            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="Motos" style="color:white">Volver a Motos</a> |
    <a asp-action="Index" asp-controller="Clientes" style="color:white">Volver a Clientes</a>
</div>