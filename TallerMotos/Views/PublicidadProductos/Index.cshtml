@model IEnumerable<TallerMotos.Models.ViewData.PublicidadProductos>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h1>Listado Descuentos</h1>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fabricante)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaFinal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fabricante)
                </td>

            </tr>
        }

    </tbody>

</table>
<a asp-action="Index" asp-controller="Productos" style="color:white">Volver a Productos</a>
<a asp-action="Index" asp-controller="Publicidad" style="color:white">Volver a Ofertas</a>
