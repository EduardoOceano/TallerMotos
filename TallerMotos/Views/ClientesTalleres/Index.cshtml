@using TallerMotos.Models.ViewData
@model List<ClientesTalleres>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<body class="bg-dark">
    <h1 style="color: white">Clientes por taller</h1>
    <form asp-action="Index" method="get">
        <div class="row">
            <div class="col-2" style="color: white">
                Taller:
            </div>
            <div class="col-4">
                <select name="taller" class="form-control bg-dark" style="color: white" asp-items="@ViewBag.Taller">
                    <option value="">(Todos)</option>
                </select>
            </div>
            <input type="submit" value="Consultar" class="btn btn-primary" />
        </div>
    </form>
    <br />
    @if (Model != null)
    {
        <table class="table table-dark table-striped ">
            <thead>
                <tr>
                    <th>Cliente</th>
                    <th></th>
                    <th>Ciudad Taller</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ClientesTalleres item in Model)
                {
                    <tr>
                        <td>@item.nombreCliente</td>
                        <td>@item.apellidoCliente</td>
                        <td>@item.ciudad</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a asp-action="Index" asp-controller="Clientes" style="color: white">Volver a Clientes</a> |
    <a asp-action="Index" asp-controller="Talleres" style="color: white">Volver a Talleres</a>
</body>