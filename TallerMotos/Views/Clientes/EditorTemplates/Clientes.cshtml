@model TallerMotos.Models.Clientes
@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>
<form asp-action="Index" method="get">
    <div class="row">
        <div class="col-2">
            Taller:
        </div>
        <div class="col-4">
            <select name="taller" class="form-control" asp-items="@ViewBag.Taller">
                <option value="">Seleccionar</option>
            </select>
        </div>
        <input type="submit" value="Seleccionar" class="btn btn-primary" />
    </div>
</form>
<h1 style="color: white">Clientes</h1>
<div class="form-group">
    <label asp-for="nombreCliente" class="control-label" style="color: white"></label>
    <input asp-for="nombreCliente" class="form-control bg-dark" style="color:white"/>
    <span asp-validation-for="nombreCliente" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="apellidosCliente" class="control-label" style="color: white"></label>
    <input asp-for="apellidosCliente" class="form-control bg-dark" style="color:white"/>
    <span asp-validation-for="apellidosCliente" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ciudadCliente" class="control-label" style="color: white"></label>
    <input asp-for="ciudadCliente" class="form-control bg-dark" style="color:white" />
    <span asp-validation-for="ciudadCliente" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="dniCliente" class="control-label" style="color: white"></label>
    <input asp-for="dniCliente" class="form-control bg-dark" style="color:white" />
    <span asp-validation-for="dniCliente" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="domicilioCliente" class="control-label" style="color: white"></label>
    <input asp-for="domicilioCliente" class="form-control bg-dark" style="color:white" />
    <span asp-validation-for="domicilioCliente" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Guardar" class="btn btn-primary" />
</div>
