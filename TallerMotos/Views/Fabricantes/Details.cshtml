@model TallerMotos.Models.ViewData.Fabricantes

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<body class="bg-dark">
    <h1 style="color: white">Details</h1>

<h1>@Model.nombreFabricante</h1>

<h4>Editar</h4>
<hr />
<div>
    <dl class="row table table-dark">
        <dt class="col-sm-2">
            Fabricante
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombreFabricante)
        </dd>
        <dt class="col-sm-2">
            País
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.pais)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>
</body>