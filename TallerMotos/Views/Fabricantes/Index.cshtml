@model IEnumerable<TallerMotos.Models.ViewData.Fabricantes>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Fabricantes</h1>

<form asp-action="Index" method="get">
    <div class="row">

        <div class="col-4">
            <select name="nombre" class="form-control" asp-items="@ViewBag.Pais">
                <option value="">Selecciona el pais</option>
            </select>
        </div>
        <input type="submit" value="Filtrar" class="btn btn-sm btn-primary" />
    </div>
    
</form>
<p>
    <a asp-action="Create">Añadir fabricante</a>
</p>
<hr />
@if (Model != null)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Fabricante
                </th>
                <th>
                    País
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreFabricante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pais)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.id">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.id">Eliminar</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
