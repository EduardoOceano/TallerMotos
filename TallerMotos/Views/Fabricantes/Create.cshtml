@model TallerMotos.Models.ViewData.Fabricantes

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<body class="bg-dark">
    <h1 style="color: white">Añadir Nuevo</h1>
<hr />
    <h4 style="color: white">Fabricantes</h4>
    <hr />
    <div class="row">
        <div class="col-md-4 bg-dark">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="nombreFabricante" class="control-label" style="color: white"></label>
                    <input asp-for="nombreFabricante" class="form-control bg-dark" style="color: white"/>
                    <span asp-validation-for="nombreFabricante" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="pais" class="control-label" style="color: white"></label>
                    <input asp-for="pais" class="form-control bg-dark" style="color: white"/>
                    <span asp-validation-for="pais" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

<div>
    <a asp-action="Index">Volver</a>
</div>

    <div>
        <a asp-action="Index" style="color: white">Atras</a>
    </div>
</body>
