@model TallerMotos.Models.ViewData.Fabricantes

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<body class="bg-dark">
    <h1 style="color: white">Eliminar</h1>



<h1>@Model.nombreFabricante</h1>

<h3>Eliminar</h3>

<p>¿Seguro bro?</p>
<hr />

<div>
    <dl class="row table table-dark">
        <dt class="col-sm-2">
            Fabricante
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombreFabricante)
        </dd>
        <dt class="col-sm-2">
            País
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.pais)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" />
        <a style="color:white" asp-action="Index">Volver</a>
    </form>
</div>
</body>