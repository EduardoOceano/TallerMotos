@model IEnumerable<TallerMotos.Models.Publicidad>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 style="color:white">Ofertas</h1>

<p>
    <a asp-action="Create" style="color:white">Añadir oferta</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.producto.tipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descuento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.producto.tipo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id" style="color:white">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id" style="color:white">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.id" style="color:white">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
