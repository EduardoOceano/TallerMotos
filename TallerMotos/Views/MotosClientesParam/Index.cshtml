@model IEnumerable<TallerMotos.Models.ViewData.MotosClientesParam>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 style="color:white">Listado Motos Clientes Parametro</h1>

<form asp-action="Index" method="get">
    <div class="row">
        <div class="col-2" style="color:white">
            Cliente:
        </div>
        <div class="col-4">
            <select name="nombre" class="form-control bg-dark" asp-items="@ViewBag.Cliente" style="color:white">
                <option value="" >(Todos)</option>
            </select>
        </div>
        <input type="submit" value="Consultar" class="btn btn-primary" />
    </div>
</form>
@if (Model != null)
{
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombreCliente)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreCliente)
                    </td>

                </tr>
            }
            

        </tbody>
    </table>
}
<div>
    <a asp-action="Index" asp-controller="Motos" style="color:white">Atras</a>
</div>