@model IEnumerable<TallerMotos.Models.Talleres>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h2 style="color:white">Talleres</h2>
<p>
    <a style="color:white" asp-action="Create">Añadir taller</a> |
    <a  style="color:white" asp-action="Index" asp-controller="Top10Empleados">Top 10 Empleados</a> |
    <a style="color:white" asp-action="Index" asp-controller="TalleresVentasTOP10">TOP 10 talleres</a> | 
    <a style="color:white" asp-action="Index" asp-controller="ClientesTalleres">Nuestros clientes</a>

</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.numEmpleados) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ciudad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.numEmpleados)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ciudad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Eliminar</a> | 
            </td>
        </tr>
}
    </tbody>
</table>
