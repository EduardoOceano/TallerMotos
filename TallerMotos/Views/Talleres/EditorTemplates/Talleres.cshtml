@model TallerMotos.Models.Talleres
@{ 
    ViewData["Title"] = "Empleados";
}

<style>
    div{
        color: white;
    }
    
</style>
<div class="form-group">
    <label asp-for="numEmpleados" class="control-label"></label>
    <input asp-for="numEmpleados" class="form-control bg-dark" style="color:white" />
    <span asp-validation-for="numEmpleados" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="telefono" class="control-label"></label>
    <input asp-for="telefono" class="form-control bg-dark" style="color:white" />
    <span asp-validation-for="telefono" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="direccion" class="control-label"></label>
    <input asp-for="direccion" class="form-control bg-dark" style="color:white" />
    <span asp-validation-for="direccion" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ciudad" class="control-label"></label>
    <input asp-for="ciudad" class="form-control bg-dark" style="color:white" />
    <span asp-validation-for="ciudad" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
</div>


<table>
    @foreach (Empleados tab02 in Model.Empleados)
    {
        <tr>
            <td>
                @tab02.id
            </td>
            <td>
                @tab02.nombreEmpleado
            </td>
            <td>
                @tab02.apellidoEmpleado
            </td>
        </tr>
    }
</table>