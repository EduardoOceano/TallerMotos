@model IEnumerable<TallerMotos.Models.ViewData.VentasClientesTalleres>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h1>Listado de Ventas, Clientes y Taller</h1>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreCliente)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreCliente)
            </td>


        </tr>
        }
    </tbody>
</table>
<a asp-action="Index" asp-controller="Clientes" style="color:white">Volver a Clientes</a>
<a asp-action="Index" asp-controller="Talleres" style="color:white">Volver a Talleres</a>