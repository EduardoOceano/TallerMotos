@model IEnumerable<TallerMotos.Models.Servicios>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 style="color:white">Servicio</h1>

<p>
    <a onclick="abrirDialog('/Servicios/Create')" style="color:white">Añadir</a> |   <a asp-action="ListadoServicios" style="color:white">Listado Servicios</a> |
    <a asp-action="Index" asp-controller="ProductosServicios" style="color:white">Productos y servicios</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                <a style="color:white" onclick="abrirDialog('/Servicios/Edit/@item.id')"><i class="far fa-edit" ></i></a>
                <a onclick="abrirDialog('/Servicios/Delete/@item.id')" style="color:white"><i class="far fa-trash-alt"></i></a> |
                <a style="color:white"><i class="fas fa-chart-line"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{ 
    <script>
        function abrirDialog(url) {
            $.ajax({
                url: url,
                success: function (res) {
                    bootbox.dialog({
                        message: "<div class='bg-dark'>" + res + "</div>",
                        size: "large"
                    });

                }
            })
        }
    </script>
}