@model IEnumerable<TallerMotos.Models.Servicios>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 style="color:white">Servicio</h1>

<p>
    <a asp-action="Create" style="color:white">Añadir</a> |   <a asp-action="ListadoServicios" style="color:white">Listado Servicios</a> |
    <a asp-action="Index" asp-controller="ProductosServicios" style="color:white">Productos y servicios</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id" style="color:white">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id" style="color:white">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.id" style="color:white">Eliminar</a>
              
            </td>
        </tr>
}
    </tbody>
</table>
