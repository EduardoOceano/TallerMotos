@model List<TallerMotos.Models.ViewData.PagosFactura>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 style="color:white">Listado de Pagos</h1>
<form asp-action="Index" method="get">
    <div class="row">
        <div class="col-2" style="color:white">
            Factura:
        </div>
        <div class="col-4">
            <select name="factura" class="form-control bg-dark" asp-items="@ViewBag.Factura" style="color:white">
                <option value="">Seleccionar</option>
            </select>
        </div>
        <input type="submit" value="Consultar" class="btn btn-primary" />
    </div>
</form>
@if (Model != null){
<table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id Factura:</th>
                <th>Importe:</th>
                <th>Fecha de Pago:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) { 
                <tr>
                    <td>@Html.DisplayFor(x=>item.id_factura)</td>
                    <td>@Html.DisplayFor(x=>item.importe)</td>
                    <td>@Html.DisplayFor(x=>item.fechaPago)</td>
                </tr>
            }
        </tbody>
    </table>
}
<div>
    <a asp-action="Index" asp-controller="Facturas" style="color:white">Back to List</a>
</div>