@model IEnumerable<TallerMotos.Models.Facturas>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Facturas</h1>

<form asp-action="Index" method="get">
    <!--<input type="text" placeholder="Introduzca el nombre del empleado" />
    <input type="submit" value="buscar" />-->


    <div class="row">
        <div class="col-2">
            Estado:
        </div>
        <div class="col-4">
            <select name="FacturaPagada" class="form-control">
                <option value="">Todos</option>
                <option value="True">Pagado</option>
                <option value="False">Sin pagar</option>
            </select>
        </div>
        <input type="submit" value="Consultar" class="btn btn-primary" />
    </div>

</form>

<p>
    <a asp-action="Create">Nueva factura</a> | 
    <a asp-action="Index" asp-controller="VentasTaller">Listado Ventas Talleres</a> |
    <a asp-action="Index" asp-controller="VentasClientesTalleres">Listado Ventas Clientes Talleres</a>
</p>
<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                Cliente
            </th>
            
            <th scope="col">
                Empleado
            </th>
            <th scope="col">
                Fecha
            </th>
            <th scope="col">
                Taller
            </th>
            <th scope="col">
                Importe
            </th>
            <th scope="col">
                Pagado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th scope="row">
                @Html.DisplayFor(modelItem => item.Cliente.nombreCliente)
                @Html.DisplayFor(modelItem => item.Cliente.apellidosCliente)
            </th>
           
            <td>
                @Html.DisplayFor(modelItem => item.EmpleadoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idTaller)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.total)€
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.pagado)
            </td>
            <td>

                <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Eliminar</a> |

            </td>
        </tr>
}
    </tbody>
</table>
