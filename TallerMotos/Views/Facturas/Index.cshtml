@model IEnumerable<TallerMotos.Models.Facturas>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<body class="bg-dark">
    <h1 style="color: white">Facturas</h1>

    <form asp-action="Index" method="get">
        <!--<input type="text" placeholder="Introduzca el nombre del empleado" />
    <input type="submit" value="buscar" />-->

        <div class="row">

            <div class="col-2">
                <a title="Buscar" style="padding:10px" class="btn btn-sm btn-primary">
                    <i class="fas fa-search"></i>
                </a>
                <a title="Añadir" onclick="abrirDialog('/Facturas/Create')" style="padding:10px" class="btn btn-sm btn-primary">
                    <i class="fas fa-plus"></i>
                </a>
                <a title="Editar" onclick="abrirDialog('/Facturas/Edit')" style="padding:10px" class="btn btn-sm btn-primary">
                    <i class="far fa-edit"></i>
                </a>
                <a title="Eliminar" onclick="abrirDialog('/Facturas/Delete')" style="padding:10px" class="btn btn-sm btn-danger">
                    <i class="far fa-trash-alt"></i>
                </a>

            </div>

            <div class="col-4">
                Seleccione un taller:
                <select name="FacturaPagada" class="form-control-sm bg-dark" style="color: white" asp-items="@ViewBag.idTaller">
                    <option value="">(Todos)</option>

                </select>
            </div>

        </div>


    </form>

    <p>


    </p>
    <table class="table table-dark">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    Cliente
                </th>

                <th scope="col">
                    Empleado
                </th>
                <th scope="col">
                    Fecha
                </th>
                <th scope="col">
                    Taller
                </th>
                <th scope="col">
                    Importe
                </th>
                <th scope="col">
                    Pagado
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        @Html.DisplayFor(modelItem => item.Cliente.nombreCliente)
                        @Html.DisplayFor(modelItem => item.Cliente.apellidosCliente)
                    </th>

                    <td>
                        @Html.DisplayFor(modelItem => item.EmpleadoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.idTaller)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.total)€
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.isPagado)
                    </td>
                    <td>

                        <a asp-action="Edit" asp-route-id="@item.id" style="color: white">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.id" style="color: white">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.id" style="color: white">Eliminar</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>