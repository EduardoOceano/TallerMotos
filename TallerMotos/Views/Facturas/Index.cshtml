@model IEnumerable<TallerMotos.Models.Facturas>

    @if(Model != null) { 
<table class="table table-dark" id="tabla">
    <thead class="thead-dark">
        <tr>
            <th scope="col" >
                Cliente
            </th>

                <th scope="col">
                    Empleado
                </th>
                <th scope="col">
                    Fecha
                </th>
                <th scope="col">
                    Taller
                </th>
                <th scope="col">
                    Importe
                </th>
                <th scope="col">
                    Pagado
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        @Html.DisplayFor(modelItem => item.Cliente.nombreCliente)
                        @Html.DisplayFor(modelItem => item.Cliente.apellidosCliente)
                    </th>

                    <td>
                        @Html.DisplayFor(modelItem => item.EmpleadoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.idTaller)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.total)€
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.isPagado)
                    </td>
                    <td>

                    <a onclick="SeleccionaRegistro(@item.id)" style="color: white">Seleccionar</a> 

                </td>
            </tr>
        }
    </tbody>
</table>
    }

<script>
    $('#tabla').Datatable();
</script>