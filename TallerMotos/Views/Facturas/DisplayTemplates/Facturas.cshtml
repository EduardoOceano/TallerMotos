@model TallerMotos.Models.Facturas
@{
    ViewData["Title"] = "Facturas";
}

<h1>Factura</h1>
<table class="table table-dark">
    <dl class="row">
        <dt class="col-sm-2 ">
            Nombre del cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.nombreCliente)
        </dd>



        <dt class="col-sm-2">
            Id del empleado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.idEmpleado)
        </dd>
        <dt class="col-sm-2">
            Fecha
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fecha)
        </dd>
        <dt class="col-sm-2">
            Taller
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.idTaller)
        </dd>
        <dt class="col-sm-2">
            Importe total
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.total)
        </dd>
    </dl>
</table>