@model TallerMotos.Models.Facturas
@{
    ViewData["Title"] = "Facturas";
}

<h1 style="color: white">Factura</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Cliente.nombreCliente" class="control-label" style="color: white">Cliente</label>
    <select asp-for="Cliente.nombreCliente" class="form-control bg-dark" style="color: white" asp-items="ViewBag.Cliente">
        <option value="0">Seleccionar</option>
    </select><!--Hacer ViewBag para mostrar nombre-->
    <span asp-validation-for="Cliente.nombreCliente" class="text-danger"></span>
</div>
<div class="form-group ">
    <label asp-for="Empleado.nombreEmpleado" class="control-label" style="color: white">Empleado</label>
    <select asp-for="Empleado.nombreEmpleado" class="form-control bg-dark" style="color: white" asp-items="ViewBag.Empleado">
        <option value="0">Seleccionar</option>
    </select>
    <span asp-validation-for="Empleado.nombreEmpleado" class="text-danger" style="color: white"></span>
</div>
<div class="form-group ">
    <label asp-for="fecha" class="control-label" style="color: white">Fecha</label>
    <input asp-for="fecha" class="form-control bg-dark" style="color: white" />
    <span asp-validation-for="fecha" class="text-danger"></span>
</div>
<div class="form-group ">
    <label asp-for="idTaller" class="control-label" style="color: white">Taller</label>
    <input asp-for="idTaller" class="form-control bg-dark" style="color: white"/>
    <span asp-validation-for="idTaller" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="total" class="control-label" style="color: white">Importe total</label>
    <input asp-for="total" class="form-control bg-dark" style="color: white"/>
    <span asp-validation-for="total" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="isPagado" class="control-label" style="color: white">Pagado</label>
    <input asp-for="isPagado" class="form-control bg-dark" style="color: white"/>
    <span asp-validation-for="isPagado" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
</div>

<hr />
<h4 style="color: white">Productos y servicios</h4>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Precio</th>
            <th scope="col">Descripción del producto o servicio</th>
        </tr>
    </thead>
    @foreach (var tab02 in Model.VentasLineas)
    {
        <tr>
            <th scope="row">
                @tab02.id

            </th>
            <td>
                @tab02.precio€
            </td>
            <td>
                @if (tab02.Producto != null)
                {
                    <span>@tab02.Producto.descripcion</span>
                }

            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/VentasLineas/Create?idFactura=@Model.id">Añadir</a>