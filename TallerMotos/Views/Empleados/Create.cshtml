@model TallerMotos.Models.Empleados

@{ ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    }

<body class="bg-dark">
    <h1 style="color:white">Añadir</h1>

    <h4  style="color:white">Empleados</h4>
    <hr />
