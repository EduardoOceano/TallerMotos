@model TallerMotos.Models.Empleados

<form asp-action="Index" method="get">
    <div class="row">
        <div class="col-2">
            Taller:
        </div>
        <div class="col-4">
            <select name="taller" class="form-control" asp-items="@ViewBag.Taller">
                <option value="">Seleccionar</option>
            </select>
        </div>
        <input type="submit" value="Seleccionar" class="btn btn-primary" />
    </div>
</form>
<style>
    label{
        color: white;
    }
</style>
<div class="form-group">
    <label asp-for="nombreEmpleado" class="control-label"></label>
    <input asp-for="nombreEmpleado" class="form-control bg-dark" style="color:white"/>
    <span asp-validation-for="nombreEmpleado" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="apellidoEmpleado" class="control-label"></label>
    <input asp-for="apellidoEmpleado" class="form-control bg-dark" style="color:white" />
    <span asp-validation-for="apellidoEmpleado" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="telefono" class="control-label"></label>
    <input asp-for="telefono" class="form-control bg-dark" style="color:white"/>
    <span asp-validation-for="telefono" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="direccion" class="control-label"></label>
    <input asp-for="direccion" class="form-control bg-dark" style="color:white"/>
    <span asp-validation-for="direccion" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ciudad" class="control-label"></label>
    <input asp-for="ciudad" class="form-control bg-dark" style="color:white"/>
    <span asp-validation-for="ciudad" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="isActive" class="control-label"></label>
    <input asp-for="isActive" class="form-control bg-dark" style="color:white"/>
    <span asp-validation-for="isActive" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TalleresId" class="control-label"></label>
    <input asp-for="TalleresId" class="form-control" />
    <span asp-validation-for="TalleresId" class="text-danger"></span>
</!--div-->

<div class="form-group">
    <label asp-for="Talleres.id" class="control-label"></label>
    <select asp-for="Talleres.id" class="form-control bg-dark" style="color:white;" asp-items="ViewBag.Talleres">
        <option value="0">Seleccionar</option>
    </select>
    <span asp-validation-for="Talleres.id" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Guardar" class="btn btn-primary" />
</div>