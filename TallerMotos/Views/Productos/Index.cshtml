@model IEnumerable<TallerMotos.Models.Productos>

@{
    ViewData["Title"] = "Index";

    Layout = "~/Views/Shared/_Layout2.cshtml";

}

<h1 style="color:white">Index</h1>

<p>
    <a asp-action="Create" style="color:white">Crear Producto</a> |
    <a asp-action="ListadoProductos" style="color:white">Listado Productos</a> |
    <a asp-action="Index" asp-controller="ProductosProveedores" style="color:white">Listado Productos Proveedores</a> |
    <a asp-action="Index" asp-controller="ProductosServicios" style="color:white">Listado Servicios</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor.nombreProveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fabricante)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td id="tipo">
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td id="precio">
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td id="stock">
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedor.nombreProveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fabricante)
            </td>
            <td>

                <a asp-action="Edit" asp-route-id="@item.id" style="color:white">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id" style="color:white">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id" style="color:white">Delete</a> 
            </td>
        </tr>
}
    </tbody>
</table>
