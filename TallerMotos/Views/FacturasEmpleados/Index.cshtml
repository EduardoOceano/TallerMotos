@if (Model != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id Factura</th>
                <th>Importe Total</th>
                <th>Id Empleado</th>
                <th>Nombre Empleado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (FacturasEmpleados item in Model)
            {
                <tr>
                    <td>@item.idFactura</td>
                    <td>@item.total</td>
                    <td>@item.idEmpleado</td>
                    <td>@item.nombreEmpleado</td>
                </tr>
            }
        </tbody>
    </table>
