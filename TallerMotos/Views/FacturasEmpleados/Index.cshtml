@using TallerMotos.Models.ViewData
@model List<FacturasEmpleados>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<body class="bg-dark">
    <h1 style="color:white">Listado de Facturas por Empleado</h1>


    <form asp-action="Index" method="get">
        <div class="row">
            <div class="col-2" style="color:white">
                Empleado:
            </div>
            <div class="col-4">
                <select name="nombreEmpleado" class="form-control bg-dark" asp-items="@ViewBag.Empleado" style="color:white">
                    <option value="">(Todos)</option>
                </select>
            </div>
            <input type="submit" value="Consultar" class="btn btn-primary" />
        </div>

    </form>

    @if (Model != null)
    {
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>Id Factura</th>
                    <th>Importe Total</th>
                    <th>Id Empleado</th>
                    <th>Nombre Empleado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (FacturasEmpleados item in Model)
                {
                    <tr>
                        <td>@item.idFactura</td>
                        <td>@item.total</td>
                        <td>@item.idEmpleado</td>
                        <td>@item.nombreEmpleado</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a asp-action="Index" asp-controller="Facturas" style="color: white">Volver a Facturas</a> |
    <a asp-action="Index" asp-controller="Empleados" style="color: white">Volver a Empleados</a>
</body>