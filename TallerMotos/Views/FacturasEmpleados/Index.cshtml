@model IEnumerable<TallerMotos.Models.ViewData.FacturasEmpleados>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h1>Listado de Facturas por Empleado</h1>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idFactura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreEmpleado)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreEmpleado)
            </td>


        </tr>
        }
    </tbody>
</table>

<form asp-action="Index">
    <input type="text" placeholder="Introduzca el nombre del empleado"/> 
    <input type="submit" />
</form>