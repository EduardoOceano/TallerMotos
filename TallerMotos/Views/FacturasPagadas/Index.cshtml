@model IEnumerable<TallerMotos.Models.ViewData.FacturasPagadas>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<body class="bg-dark">
<h1 style="color:white">Listado Facturas Pagadas</h1>
<form asp-action="Index" method="get">
    <div class="row">
        <div class="col-2" style="color:white">
            Id Factura:
        </div>
        <div class="col-4">
            <select name="factura" class="form-control bg-dark" asp-items="@ViewBag.VLPagada" style="color:white">
                <option value="">(Todos)</option>
            </select>
        </div>
        <input type="submit" value="Consultar" class="btn btn-primary" />
    </div>
</form>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Cantidad:</th>
            <th>Precio:</th>
            <th>Id Factura:</th>
            <th>Pagado:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idFactura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.idCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isPagado)
                </td>
            </tr>
        }
    </tbody>
</table>
</body>